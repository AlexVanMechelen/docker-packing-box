#!/usr/bin/python3
# -*- coding: UTF-8 -*-
from pboxtools import re, run
from peid import identify_packer


def execute(name, **kwargs):
    try:
        return identify_packer(kwargs['path'], db=kwargs['db'], logger=kwargs['logger'])[0][1], None
    except Exception as e:
        return None, str(e)


def parse(output):
    return list(map(lambda x: x.split("->")[0].strip(), output))


if __name__ == "__main__":
    run("PEiD", exec_func=execute, parse_func=parse, exe_type="pe", exe_help="path to the PE file", db=None)

